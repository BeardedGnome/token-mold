<div class="tab scrollable{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="form-group">
        <label>{{ localize "TOKEN.FIELDS.displayBars.label" }}:</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='displayBarsUse'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.displayBars.use' id='displayBarsUse' {{checked settings.config.displayBars.use}} />
                </div>
            </div>
            <div class="form-group">
                <div class="form-fields">
                    <select name="config.displayBars.value" data-dtype="Number">
                        {{ selectOptions displayModes selected=settings.config.displayBars.value }}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "TOKEN.FIELDS.bar1.attribute.label" }}:</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='bar1Use'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.bar1.use' id='bar1Use' {{checked settings.config.bar1.use}} />
                </div>
            </div>
            <div class="form-group">
                <div class="form-fields">
                    <select name="config.bar1.attribute" data-dtype="String">
                        {{ selectOptions barAttributes selected=settings.config.bar1.attribute blank="None" localize=true }}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "TOKEN.FIELDS.bar2.attribute.label" }}:</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='bar2Use'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.bar2.use' id='bar2Use' {{checked settings.config.bar2.use}} />
                </div>
            </div>
            <div class="form-group">
                <div class="form-fields">
                    <select name="config.bar2.attribute" data-dtype="String">
                        {{ selectOptions barAttributes selected=settings.config.bar2.attribute blank="None" localize=true }}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "TOKEN.FIELDS.displayName.label"}}:</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='displayNameUse'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.displayName.use' id='displayNameUse' {{checked settings.config.displayName.use}} />
                </div>
            </div>
            <div class="form-group">
                <div class="form-fields">
                    <select name="config.displayName.value" data-dtype="Number">
                        {{ selectOptions displayModes selected=settings.config.displayName.value }}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "TOKEN.FIELDS.disposition.label"}}:</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='dispositionUse'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.disposition.use' id='dispositionUse' {{checked settings.config.disposition.use}} />
                </div>
            </div>
            <div class="form-group">
                <div class="form-fields">
                    <select name="config.disposition.value" data-dtype="Number">
                        {{ selectOptions dispositions selected=settings.config.disposition.value }}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "tmold.default.vision" }}</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='visionUse'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.vision.use' id='visionUse' {{checked settings.config.vision.use}} />
                </div>
            </div>
            <div class="form-group">
                <label style="font-weight: initial;" for='visionValue'>{{ localize "TOKEN.FIELDS.sight.enabled.label" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.vision.value' id='visionValue' {{checked settings.config.vision.value}} />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "tmold.default.randScale" }}</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='scaleUse'>{{ localize "tmold.default.active" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.scale.use' id='scaleUse' {{checked settings.config.scale.use}} />
                </div>
            </div>
            <div class="form-group slim">
                <label style="font-weight: initial;" for='scale_min'>{{ localize "tmold.default.min" }}</label>
                <div class="form-fields">
                    <input type='number' name='config.scale.min' id='scale_min' value='{{settings.config.scale.min}}' data-dtype='Number' />
                </div>
            </div>
            <div class="form-group slim">
                <label style="font-weight: initial;" for='scale_max'>{{ localize "tmold.default.max" }}</label>
                <div class="form-fields">
                    <input type='number' name='config.scale.max' id='scale_max' value='{{settings.config.scale.max}}' data-dtype='Number' />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "tmold.default.randRotation" }}</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for='rotationUse'>{{ localize "tmold.default.overwrite" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.rotation.use' id='rotationUse' {{checked settings.config.rotation.use}} />
                </div>
            </div>
            <div class="form-group slim">
                <label style="font-weight: initial;" for='rotation_min'>{{ localize "tmold.default.minAngle" }}</label>
                <div class="form-fields">
                    <input type='number' name='config.rotation.min' id='rotation_min' value='{{settings.config.rotation.min}}' data-dtype='Number' />
                </div>
            </div>
            <div class="form-group slim">
                <label style="font-weight: initial;" for='rotation_max'>{{ localize "tmold.default.maxAngle" }}</label>
                <div class="form-fields">
                    <input type='number' name='config.rotation.max' id='rotation_max' value='{{settings.config.rotation.max}}' data-dtype='Number' />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "tmold.default.randMirroring" }}</label>
        <div class="flexcol">
            <div class="form-group">
                <label style="font-weight: initial;" for="mirrorXuse">{{ localize "tmold.default.horizontal" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.mirrorX.use' id="mirrorXuse" {{checked settings.config.mirrorX.use}} data-dtype='Boolean' />
                </div>
            </div>
            <div class="form-group">
                <label style="font-weight: initial;" for="mirrorYuse">{{ localize "tmold.default.vertical" }}</label>
                <div class="form-fields">
                    <input type='checkbox' name='config.mirrorY.use' id="mirrorYuse" {{checked settings.config.mirrorY.use}} data-dtype='Boolean' />
                </div>
            </div>
        </div>
    </div>
</div>